{
	"name": "cdk-github-runners",
	"version": "0.1.0",
	"bin": {
		"cdk-github-runners": "bin/cdk-github-runners.js"
	},
	"scripts": {
		"build": "tsc",
		"deploy": "npx cdk deploy --all --require-approval never",
		"status": "aws --region ap-south-1 lambda invoke --function-name github-runners-runnersstatus1A5771C0-Ya95M7VIUmvJ status.json && npm run format",
		"bootstrap": "npx cdk bootstrap",
		"destroy": "npx cdk destroy --all --force && npx cdk bootstrap --destroy && npx cdk bootstrap --clean",
		"nuke": "aws-nuke nuke -c aws-nuke.yaml --no-alias-check --no-dry-run",
		"lint": "biome check --verbose",
		"format": "biome check --write --verbose",
		"all": "npm run format && npm run lint && npm run build && npm run deploy",
		"upgrade-packages": "npm-check-updates -u && npm update"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.3",
		"@types/jest": "^30.0.0",
		"@types/node": "24.3.1",
		"aws-cdk": "2.1029.0",
		"jest": "^30.1.3",
		"ts-jest": "^29.4.1",
		"ts-node": "^10.9.2",
		"typescript": "~5.9.2"
	},
	"dependencies": {
		"@cloudsnorkel/cdk-github-runners": "^0.14.12",
		"aws-cdk-lib": "2.214.0",
		"constructs": "^10.4.2",
		"npm-check-updates": "^18.1.0"
	}
}
